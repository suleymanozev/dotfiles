# pyproject.toml snippet

snippet isort "configuration for isort formatter."
[tool.isort]
# https://pycqa.github.io/isort/docs/configuration/options.html
profile = "google"
single_line_exclusions = ['typing', 'typing_extensions']
extra_standard_library = ['typing_extensions']
known_first_party = []
known_third_party = []

[tool.ruff.lint.isort]
# ruff as isort: ruff check --fix --select=I001 <FILES>
# https://docs.astral.sh/ruff/settings/#lintisort
extra-standard-library = ['typing_extensions']
known-first-party = []
known-third-party = []

endsnippet
snippet black "configuration for black formatter."
[tool.black]
# line-length = 80
# https://black.readthedocs.io/en/stable/usage_and_configuration/the_basics.html#configuration-format
target-version = ['py311']
# include = '\.pyi?$'
extend-exclude = '''
/(
    .git
  | build
)/
'''

endsnippet
snippet yapf "configuration for yapf formatter."
[tool.yapf]
# see https://github.com/google/yapf#knobs
based_on_style = "${1|yapf,google,pep8|}"
indent_width = 4
spaces_before_comment = 2

[tool.yapfignore]
ignore_patterns = [
]

endsnippet
snippet pyright "configuration for pyright type checker."
[tool.pyright]
# https://github.com/microsoft/pyright/blob/main/docs/configuration.md

typeCheckingMode = "standard"  # off, basic, standard, strict

# Suppress "false positive" type errors to a warning level.
reportPrivateImportUsage = "warning"

endsnippet
snippet ruff "configuration for ruff linter."
# https://docs.astral.sh/ruff/configuration/
[tool.ruff]
line-length = 79
indent-width = 4
target-version = "py311"

# https://docs.astral.sh/ruff/rules/
[tool.ruff.lint]
preview = true  # use experimental features
extend-select = [
    # In addition to the defaults: ["E4", "E7", "E9", "F"]
    "PLE",     # pylint errors
    "PLW",     # pylint warnings
    "RUF",     # ruff-specific
]
ignore = [
    "E702",    # multiple-statements-on-one-line-semicolon
    "E731",    # lambda-assignment
]

endsnippet
